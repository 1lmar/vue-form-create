$primary-color = #409EFF
$primary-background-color = #ecf5ff
.fd-style
  height 100%
  *, :after, :before
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
  .fd-container
    background #fff
    height 100%
    .ant-layout
      height 100% !important
    &>.ant-layout
      background #fff
    .fd-main
      position relative
      &>.ant-layout
        position absolute
        top 0
        bottom 0
        left 0
        right 0
  .components
    padding 8px 0
    width 100%
    height 100%
    .widget-cate
      padding 8px 12px
      font-size 13px
    ul
      position relative
      overflow hidden
      padding 0 10px 10px
      margin 0
    .form-edit-widget-label
      font-size 12px
      display block
      width 48%
      line-height 26px
      position relative
      float left
      left 0
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      margin 1%
      border 1px solid #F4F6FC
      &:hover
        border 1px dashed $primary-color
        &>a
          color $primary-color
      &>a
        color #333
        display block
        cursor move
        background #f4f6fc
        border 1px solid #f4f6fc
        .svg-icon
          margin-right 6px
          margin-left 8px
          font-size 14px
          display inline-block
          vertical-align middle
        span
          display inline-block
          vertical-align middle
